{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/users",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://0.0.0.0:8001"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://0.0.0.0:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/products",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/products",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://0.0.0.0:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}